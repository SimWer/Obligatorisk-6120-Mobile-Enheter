<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <solid
                android:color="@color/white"
                />

            <stroke
                android:width="2dp"
                android:color="@color/button_secondary"
                />

            <corners
                android:radius="360dp"
                />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp"
                />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#FFF"
                />

            <corners
                android:radius="360dp"
                />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp"
                />
        </shape>
    </item>

</selector>