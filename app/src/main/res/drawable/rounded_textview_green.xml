<?xml version="1.0" encoding="utf-8"?>
<!-- Used for making the title box -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Set the background for the shape -->
    <stroke
        android:width="4dp"
        android:color="@color/boskartoteketPrimary"
        />
    <solid
        android:color="@color/boskartoteketPrimary"
        />
    <!-- Round the corners and set the padding for easier reuseablity-->
    <corners
        android:radius="2dp"
        />
    <padding
        android:left="32dp"
        android:right="32dp"
        android:top="32dp"
        android:bottom="32dp"
        />

</shape>